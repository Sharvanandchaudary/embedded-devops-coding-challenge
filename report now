name: PR Checklist Validator

on:
  pull_request:
    types: [opened, edited, reopened, synchronize]

jobs:
  validate-checklist:
    runs-on: gh-runner-k8-oncloud-iac-test

    steps:
      - name: Checkout PR
        uses: actions/checkout@v3

      - name: Validate Checklist & Reviewers
        uses: actions/github-script@v6
        with:
          script: |
            const pr = await github.rest.pulls.get({
              owner: context.repo.owner,
              repo: context.repo.repo,
              pull_number: context.payload.pull_request.number
            });

            const body = pr.data.body || "";
            const reviewers = pr.data.requested_reviewers || [];

            if (!body.includes("- [x]")) {
              core.setFailed("❌ PR checklist is not completed!");
            } else {
              console.log("✅ PR checklist completed.");
            }

            if (reviewers.length === 0) {
              core.setFailed("❌ No reviewers assigned to the PR!");
            } else {
              console.log("✅ At least one reviewer is assigned.");
            }
